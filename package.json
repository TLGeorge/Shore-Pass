    "@material-ui/icons": "^4.9.1",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.16.3",
    "express-session": "^1.17.1",
    "fontsource-roboto": "^2.2.6",
    "if-env": "^1.0.4",
    "moment": "^2.27.0",
    "mongoose": "^5.3.16",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "react-moment": "^0.9.7"
